<%label = ""
default = ""
if point != nil && point.label!=nil && (!point.label.eql? "")
  showDelete  = true
  default     = point.label
else
  showDelete = false
end
%>
<span class="pointInput" id="<%=type%>_id">
<%= form_tag('/updateRoute', :remote => true) do |f| %>
			<%= text_field_tag type,default, :style=> "width:150px;" %>
		<%if showDelete%>	
			<%= # link to remove that activity
			link_to image_tag("delete.gif", :border=>0,:class => "delete"), "/updateRoute?delete_point="+type,:class=>"delete", :remote => true,:onclick => 'showWall();'%>
		<% end%>	
	<% end%>
</span>