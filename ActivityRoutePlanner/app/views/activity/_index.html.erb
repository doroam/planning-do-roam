<%route = Route.find(session[:main_route])%>
<span id="activity_id">
  <table>
<% 
  if route.activities != nil
%><tr><td colspan="2">Activities:</td></tr><%
        list = route.activities.all(:order => 'created_at ASC')
	list.each do |elem| %>		  
          <%= render :partial => 'activity/form',
				:locals => {:activity => elem, 	:show_delete => !elem.is_empty}
		  %>
        <%end%>
  <%end%>
</table>
</span>