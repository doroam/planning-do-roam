<%route = session[:main_route]
if params[:deleteActivity]!=nil%>
  removeMark("<%=params[:deleteActivity]%>");
<%else%>
  <%if params[:activity] && route.activities.length > 1
    id = params[:id]
    if id==nil||id.eql?("")
      id = route.activities.length-2
    end
    activity = route.activities[id.to_i]
    activity.result.each.with_index do |result, index|
		
	#image path
	iconPath = Global::IMAGE_URL_PREFIX
	iconType = Global::IMAGE_URL_SUFFIX
	icon = Global::IMAGE_URLS[activity.tag+"$"+activity.value]
	if icon == nil
		icon=""
	end
	imagePath = iconPath+icon+iconType
	%>
      addActivityMark("<%=result.label%>","<%=result.lat%>","<%=result.long%>","<%=imagePath%>","<%=index%>","<%=id%>");
    <%end%>
<%end%>
<%end%>
var elem = document.getElementById('route_id');
elem.innerHTML = "<%= escape_javascript(render(:partial => 'init/menu'))%>";
hideWall();
