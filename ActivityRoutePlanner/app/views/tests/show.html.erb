<div style='width:500'>
	<div id="task" style='float: left; width: 300px; height:400px; border-right: 3px double black'>
	  <b>Task:</b>
	  <p><%= @test.task %></p>
	</div> 
	
	
	<div id="input" style='margin-left:330px; padding-top:30px;'>
		<%= form_tag("/answer", :method => "get") do %>
			<%= label_tag(:q, "Query:") %>
			<%= text_field_tag(:q) %>
			<input type="hidden" name="id" value="<%= @test.id%>">
			<%= submit_tag("Senden") %>
			<br /><br />
			<%=image_tag("/images/test1.png", :height => 350, :title =>"Screenshot_query", :alt=>"Screenshot_query", :border => "0")%>
			
		<% end %>
		
	</div>
</div>
