<div style='width:500'>
	<div id="task" style='float: left; width: 300px; height:400px; border-right: 3px double black'>
	  <b>Task <%= session[:count].to_s+" "+t("of")+" 10" %>:</b>
	  <p><%= @test.task %></p>
		<% if @next.nil?%>
			<%= form_tag("/end", :method => "get") do %>
				<input type="hidden" name="user" value="<%= @user.id%>">
				<%= submit_tag(t("ready")) %>
			<%end%>
		<%else%>
			<%= form_tag("/tests/#{@next.id}", :method => "get") do %>
				<input type="hidden" name="user" value="<%= @user.id%>">
				<%= submit_tag(t("next")) %>
			<%end%>
		<%end%>
	</div> 
	
	
	<div id="input" style='margin-left:330px; padding-top:30px;'>
		
		<%= form_tag("/answer", :method => "get") do %>
			<%= label_tag(:q, "Query:") %>
			<%= text_field_tag(:q, @data.answer, :size => 50, :disabled => true) %>
			<%= submit_tag(t("send"), :disabled => true) %>
			
		<% end %>
		
		<h3><%= t("result") %></h3>
		<%=image_tag("/images/#{@test.screen_solution}", :height => 450, :title =>"Screenshot_answer", :alt=>"Screenshot is missing", :border => "0")%>			
		<br />
	</div>
</div>

