<% form_tag :action => "freetext" do %>

<%=text_field_tag 'freetext', 
                  nil,
                  :placeholder => 'From university bremen to restaurant near Berliner Freiheit', 
                  :id => 'freetext', 
                  :align => "center"
%>
<%= hidden_field_tag :type, type %>
  <%= hidden_field_tag :minlon %>
  <%= hidden_field_tag :minlat %>
  <%= hidden_field_tag :maxlon %>
  <%= hidden_field_tag :maxlat %>
  <%= hidden_field_tag :zoom %>

<% end %>

