<%route = session[:main_route] %>

<table style="font-size:11px;">
  <tr>
    <td><%= link_to "Reset Route", "/resetMethod" ,:onclick => 'showWall();'%></td>
    <td align="right">
    <%
		if route.end_point.lat != nil && route.start_point.lat != nil%>
			<%= link_to "Create Route", "/check_edge", :remote => true, 
			:onclick => 'showWall();'%>
    	<%end %>
	</td>
  </tr>
<tr>
	<td style="width:120px;">	
Select algorithm:
</td><td>
<%
	dummyAlg = Array.new
	dummyAlg.push Activity.new("fast","A*")
	dummyAlg.push Activity.new("exact","Dijkstra")
%>
<%= select_tag "setAlgorithmus",
            options_from_collection_for_select(dummyAlg,"value","tag",route.sort),
		:style=>"width:117px;",
	    :onchange => 'showWall();'+remote_function(
		 	 :url=> "/setAlgorithmus",
			 :with => "'algo=' +document.getElementById('setAlgorithmus').value")
%>
</td></tr>
<tr>
	<td style="width:120px;">	
Notice sort:
</td><td>
<% 
	dummyAct = Array.new
	dummyAct.push Activity.new("yes","false")
	dummyAct.push Activity.new("no","true")
%><%=
	select_tag "sort",
            options_from_collection_for_select(dummyAct,"value","tag",route.sort),
		:style=>"width:117px;",
	    :onchange => 'showWall();'+remote_function(
		 	 :url=> "/setAlgorithmus",
			 :with => "'sort=' +document.getElementById('sort').value")
%>
</td></tr>
</table>